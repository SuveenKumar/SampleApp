<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp"
        xmlns:ViewModel="clr-namespace:SampleApp.ViewModel" x:Class="SampleApp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Window.DataContext>
        <ViewModel:ViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBox Height="50" FontSize="40" Text="{Binding Path=FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Height="50" FontSize="40" Text="{Binding Path=LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Height="50" FontSize="40" Content="Enter"/>
            <TextBlock Height="50" FontSize="40" Text="{Binding Path=FullName}" />
        </StackPanel>
    </Grid>
</Window>
